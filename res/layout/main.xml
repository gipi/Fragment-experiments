	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
	<ViewSwitcher
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			>
			<fragment android:name="org.ktln2.android.FragmentExperimentsActivity$ItemsFragment"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
			/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			>
			<fragment android:name="org.ktln2.android.FragmentExperimentsActivity$DetailsFragment"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
			/>
		</LinearLayout>
	</ViewSwitcher>
</LinearLayout>

